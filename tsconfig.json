{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "outDir": "./api/",
    "rootDir": "./",
    "strict": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "api/*.ts"]
}
